using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.ComponentModel.DataAnnotations;
using System.Runtime.Serialization;
using System.Web;


namespace ITP_298
{
    [MetadataType(typeof(CategoryMetadata))]
    public partial class Employee
    {
        private sealed class CategoryMetadata
        {
            [Display(Name = "Employee ID")]
            public int EmployeeId { get; set; }

            [Display(Name = "First Name")]
            public string FirstName { get; set; }

            [Display(Name = "Last Name")]
            public string LastName { get; set; }
            [Display(Name = "Email")]
            public string Email { get; set; }

            [Display(Name = "Username")]
            public string Username { get; set; }
            [Display(Name = "Password")]
            public string Password { get; set; }

            [Display(Name = "Employee Status Id")]
            public int EmployeeStatusId { get; set; }

            [Display(Name = "Phone Number")]
            public int PhoneNum { get; set; }

            [Display(Name = "Office Hours")]
            public DateTime OfficeHours { get; set; }


        }
    }

    [MetadataType(typeof(SectionMetadata))]
    public partial class Section

    {
        private sealed class SectionMetadata
        {
            [Display(Name = "Mode")]
            public string Mode { get; set; }

            [Display(Name = "Room")]
            public int Room { get; set; }

            [Display(Name = "Time" )]
            public DateTime Time { get; set; }

            [Display(Name = "StartDate")]
            public DateTime StartDate { get; set; }

            [Display(Name = "EndDate")]
            public DateTime EndDate { get; set; }

            [Display(Name = "CourseId")]
            public int CourseId { get; set; }

           

        }
    }

    [MetadataType(typeof(GroupMetadata))]
    public partial class Group
    {
        private sealed class GroupMetadata

        {
            [Display(Name = "GroupId" )]
            public string GroupId { get; set; }
            
            [Display(Name = "Name")]
            public string Name { get; set; }
        }
    }

    [MetadataType(typeof(EmployeeMetadata))]

    public sealed class EmployeeMetadata
    {

        [Display(Name = "EmployeeId")]
        public int EmployeeId { get; set; }

        [Display(Name = "FirstName")]
        public string FirstName { get; set; }

        [Display(Name = "LastName")]
        public string LastName  { get; set; }

        [Display(Name = "PhoneNum")]
        public int PhoneNum  { get; set; }

        [Display(Name = "Email")]
        public string Email   { get; set; }

        [Display(Name = "OfficeHour")]
        public DateTime OfficeHour   { get; set; }

        [Display(Name = "Username")]
        public string Username   { get; set; }

        [Display(Name = "Password")]
        public string password   { get; set; }




    }

    [MetadataType(typeof(CourseMetadata))]

    public sealed class CourseMetadata
    {
        [Display(Name = "CourseId")]
        public int CourseId  { get; set; }

        [Display(Name = "Credit")]
        public int Credit  { get; set; }

        [Display(Name = "Description")]
        public string Description   { get; set; }

        [Display(Name = "Prerequisite")]
        public string Preriquisite   { get; set; }

        [Display(Name = "DepartmentCode")]
        public string DepartmentCode   { get; set; }


    }

    [MetadataType(typeof(PolicyMetadata))]

    public sealed class PolicyMetadata
    {
        [Display(Name = "PolicyId")]
        public int PolicyId  { get; set; }

        [Display(Name = "Title")]
        public string Title   { get; set; }

        [Display(Name = "Description")]
        public string Description  { get; set; }

        [Display(Name = "GroupId")]
        public int GroupId  { get; set; }

        [Display(Name = "SectionId")]
        public int SectionId  { get; set; }
    }
}
