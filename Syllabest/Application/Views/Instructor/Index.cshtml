</html>

<p>
    <label class="filter">Search by Name</label>
    &nbsp;&nbsp;&nbsp;
    @Html.TextArea("Search", null,
    htmlAttributes: new { @class = "filter", @onclick = "FilterByName()", @rows = "1" })
    <button onclick="FilterByName()">Search</button>
</p>

<div id="instructorContainer">
    @Html.Partial("_Index", Model)
</div>

@section scripts {
    <script type="text/javascript">
            
            function FilterByName() {
                var search = $('#Search').val();
                var container = $('#instructorContainer');
                container.load('@Url.Action("_IndexByName")?parm=' + search);
            }
    </script>
}